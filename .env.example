# Storage provider: 'local' (default) or 's3'
STORAGE_PROVIDER=local

# Local storage serves files from /uploads via Express static route
# No configuration needed for local mode.

# S3 configuration (used when STORAGE_PROVIDER=s3)
AWS_S3_BUCKET=
AWS_S3_REGION=
# Optional: set explicit credentials, or rely on instance profile/role
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# ACL for uploaded objects (default: public-read)
AWS_S3_ACL=public-read
# Optional base URL override (e.g., CDN): https://cdn.example.com
AWS_S3_PUBLIC_URL_BASE=

# ============================================
# Authentication Configuration
# ============================================

# Authentication Provider: 'local' or 'cognito'
# Set to 'cognito' to enable AWS Cognito authentication
AUTH_PROVIDER=local

# Local JWT Configuration (used when AUTH_PROVIDER=local)
JWT_SECRET=your-secure-jwt-secret-change-in-production

# AWS Cognito Configuration (required when AUTH_PROVIDER=cognito)
# Get these values from AWS Cognito Console
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

